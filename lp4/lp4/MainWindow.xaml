<Window x:Class="lp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastrar Aluno" Height="200" Width="380">
    <Grid>
        <Button x:Name="btnCadastro" Content="Cadastrar Aluno" HorizontalAlignment="Left" Margin="96,127,0,0" VerticalAlignment="Top" Width="98" Click="btnCadastro_Click"/>
        <Label Content="Nome: " HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top"/>
        <Label Content="Turma: " HorizontalAlignment="Left" Margin="9,43,0,0" VerticalAlignment="Top"/>
        <Label Content="Idade: " HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Height="23" Margin="59,15,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="286" CharacterCasing="Upper"/>
        <TextBox x:Name="txtTurma" HorizontalAlignment="Left" Height="23" Margin="59,43,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="64" CharacterCasing="Upper"/>
        <TextBox x:Name="txtIdade" HorizontalAlignment="Left" Height="23" Margin="61,76,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="35"/>

    </Grid>
</Window>
